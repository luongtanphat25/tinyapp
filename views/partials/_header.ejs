<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <div class="container-fluid">
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-item nav-link" href="/urls">My URLs</a>
          </li>
          <li class="nav-item">
            <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
          </li>
        </ul>
        <% if (username) { %>
        <form class="d-flex ml-auto" method="post" action="/logout">
          <span class="navbar-text mr-3">Logged in as <%= username %></span>
          <button class="btn btn-outline-light" type="submit">Logout</button>
        </form>
        <% } else { %>
        <ul class="d-flex ml-auto navbar-nav" >
          <li class="nav-item">
            <a class="nav-item nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-item nav-link" href="/register">Register</a>
          </li>
        </ul>
        <% } %>
      </div>
    </div>
  </nav>
</header>
